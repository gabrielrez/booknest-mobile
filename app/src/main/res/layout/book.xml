<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/white"
    android:padding="20dp">

    <ImageView
        android:id="@+id/mainImage"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:src="@drawable/logo_light"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/cover"
        android:layout_width="120dp"
        android:layout_height="180dp"
        android:src="@drawable/capa_harry_potter"
        android:layout_marginTop="48dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toBottomOf="@+id/mainImage"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/username"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Hary Potter"
        android:textColor="@color/dark_blue"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toTopOf="@+id/cover"
        app:layout_constraintStart_toEndOf="@+id/cover" />

    <TextView
        android:id="@+id/description"
        android:layout_width="241dp"
        android:layout_height="154dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:text="Harry Potter é um garoto cujos pais, feiticeiros, foram assassinados por um poderosíssimo bruxo quando ele ainda era um bebê. Ele foi levado, então, para a casa dos tios que nada tinham a ver com o sobrenatural."
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/cover"
        app:layout_constraintTop_toBottomOf="@+id/username" />

    <Button
        android:id="@+id/add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="24dp"
        android:textSize="16sp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:textStyle="bold"
        android:text="Adicionar à biblioteca +"
        android:backgroundTint="@color/orange">

    </Button>

</androidx.constraintlayout.widget.ConstraintLayout>